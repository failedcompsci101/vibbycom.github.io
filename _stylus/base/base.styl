//
body
    font-family $base-font-family
    font-size $base-font-size
    font-weight 400

    color $text-color
    background-color #fff
    line-height 1.4
    font-size 18px

    position relative

    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

    text-rendering geometricPrecision

a
    position relative
    transition all 0.2s ease


h1, h2, h3, h4, h5, h6
    color $h-color
