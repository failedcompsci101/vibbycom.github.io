.accordion-tabs
    padding 0
    text-align center
    position relative
    w(1600px)


    .tab-header-and-content
        list-style none
        display inline

    .tab-link
        display inline-block
        text-align center
        padding 5px 20px
        border-bottom 4px solid transparent
        font-size 1.618rem

    .is-active
        border-bottom 4px solid $link-color

    .tab-content
        display none
        width 100%
        float left
        margin-top 60px
        text-align left
        overflow visible
        height 600px
        background-size 100%
        background-position 0 100%
        background-repeat no-repeat
        +below($sm)
            height 300px
            padding 0px 15px
        p
            w(600px)

        &.cm
            background-image url('/assets/img/cm-bg.png')
        &.education
            background-image url('/assets/img/education-bg.png')
        &.gaming
            background-image url('/assets/img/gamers-bg.png')
        &.sports
            background-image url('/assets/img/sports-bg.png')
