.cta
    color #fff
    padding 13px 25px
    border-radius 2px
    display inline-block
    text-transform uppercase
    font-size 16px
    font-weight 500


.cta__primary
    @extend .cta
    .fa
        margin-right 5px
        color $link-color

.cta__primary--big
    margin-top emRhythm(3, 1)
    @extend .cta__primary
    background-color #fff
    color $link-color
    .fa
        color $link-color
        
.cta__primary--sm
    @extend .cta__primary
    background-color $link-color
    padding 0.5em 0.7em
    &:hover
        background-color darken($link-color, 20%)
    .fa
        color #fff
        
.cta__secondary
    margin-top emRhythm(3, 1)
    @extend .cta
    background-color $h-color + 20%
    &:hover
        background-color $h-color + 10%