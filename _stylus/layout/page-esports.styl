//Page eSports

.esports
    .hero
        background-image url(https://s3-eu-west-1.amazonaws.com/vibby-static/LandingPage/esports/esports-bg.jpg)
    .embedded
        .vib-embed
            col(1/2, cycle:2)
            margin-bottom 35px
            +below($sm)
                span()
                
    .our-partners
        .partners
            center($sm)
            .partner
                col(1/3, cycle: 3, gutter: 10)
                position relative
                height 100px                
                +below($xs)
                    col(1, uncycle: 3, cycle: 1)
                    padding 20px
                    height 200px
                    display flex
                    justify-content center
                    align-items center
                a
                    display block
                    text-align center
                    +above($xs)
                        align(both)
                img
                    max-width 100%
                    filter url("data:image/svg+xml;utf8,<svg xmlns=\'http://www.w3.org/2000/svg\'><filter id=\'grayscale\'><feColorMatrix type=\'matrix\' values=\'0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0 0 0 1 0\'/></filter></svg>#grayscale"); /* Firefox 3.5+ */
                    filter gray
                    -webkit-filter: grayscale(100%)
                    transition all 0.2s ease
                    &:hover
                        filter none
                        -webkit-filter: grayscale(0%);