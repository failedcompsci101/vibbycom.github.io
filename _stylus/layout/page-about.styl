.about
  .hero
    background url(https://s3-eu-west-1.amazonaws.com/vibby-static/LandingPage/about/team-bg.jpg) fixed;
    background-repeat no-repeat
    background-position center bottom
    background-size cover

  .block.our-team .path:after
    display none

  .team
    .team-member
        col(1/4, cycle: 4)
        text-align center
        +below($sm)
            col(1/3, uncycle: 4, cycle: 3)
            text-align center
        +below($xs)
            col(1/2, uncycle: 3, cycle: 2)
            text-align center
        img
            width 100px
            height 100px
            border-radius 50%
        .info
            text-align: center
            margin-top 10px
            h4
                font-family: $font-hind
                font-size 14px
                line-height 16px
                font-weight 600
                word-break keep-all
            p
                line-height 1
                color #aaaee5
                color #C3C5E7
  .hiring
    display block
    text-align: center
    padding-bottom 60px
    h2
      font-size 50px
      font-family: $font-light
