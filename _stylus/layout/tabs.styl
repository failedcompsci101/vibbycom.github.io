.vertical-tabs
    span(1/1)
    
    .tabs-titles
        col(2/5)
        +below($md)
            center(max-width = $xs - 30)

    .tabs-titles li
        cursor pointer
        padding 25px 20px
        display flex
        align-items center
        margin-bottom 20px
        .text
            margin-left 20px
        h3
            color $h-color
            border-bottom 2px solid $link-color + 80%
            padding-bottom 15px
            margin-bottom 15px

    .tabs-titles li.current
        +above($md)
            background $link-color + 80%
            box-shadow: 0 10px 20px rgba(0,0,0,0.16), 0 6px 6px rgba(0,0,0,0.20);
            h3
                border-bottom 2px solid $link-color
            


    .tabs-contents
        height 100%
        col(3/5)
        +below($md)
            display none

        .content
            height 100%
            text-align center

    .tabs-contents li
        height 100%
        display none


    .tabs-contents li:first-child
        display block /* first one content displayed by default */
