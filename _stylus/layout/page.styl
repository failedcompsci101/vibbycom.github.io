//Page

.page
    .block
        // background-color #ccc
        margin-bottom 100px
        w($xl)
        &__header
            // background-color #aca
            text-align center
            w($xl)
            margin-bottom 50px
        &__title
            color $dark-color
            margin-bottom emRhythm(3, $ms-up3)
            position relative
        &__description
            color #000 + 30%

    .benefits
        +below($sm)
            padding-top 40px
        .benefit
            column(1/3, cycle: 3)
            text-align center
            &__icon
                height 140px
                width 140px
                border-radius 50%
                border 1px solid #BBE1FF
                margin 0 auto
                display flex
                align-items center
                justify-content center
                margin-bottom 30px
                .fa
                    font-size 4.236rem
                    color #2CA3FF
            
    .dark
        background $nav-bg
        color #fff !important
        .block
            &__title
                color $light-color
                margin-bottom 10px
            &__description
                color #fff - 20%
                
    .darker
        background $nav-bg - 15%
        color #fff !important
        .block
            &__title
                color $light-color
                margin-bottom 10px
            &__description
                color #fff - 20%            