//Page
.page
    .block
        // background-color #ccc
        margin-bottom 100px
        &:last-child
            margin-bottom 0px
            padding-bottom 50px
        w($xl)
        &__header
            // background-color #aca
            text-align center
            w($xl)
            margin-bottom emRhythm(5, $base-em-font-size)
            +below($sm)
                margin-bottom emRhythm(3, $base-em-font-size)
        &__title
            color $dark-color
            margin-bottom emRhythm(3, $ms-up3)
            position relative
        &__description
            color #000 + 30%
            center($xs + 50)

    .benefits
        +below($sm)
            padding-top 40px
        .benefit
            text-align center
            center(max-width = $xs)
            +below($md)
                margin-bottom emRhythm(3, $base-em-font-size)
            +above($md)
                col(1/3, cycle: 3)
                text-align center
            &__icon
                height 140px
                width 140px
                border-radius 50%
                border 1px solid #BBE1FF
                margin 0 auto
                display flex
                align-items center
                justify-content center
                margin-bottom 30px
                svg
                    width 60px
                    height 60px
                    .st0
                        fill $link-color
                .fa
                    font-size 4.236rem
                    color $link-color
            p
                margin-bottom 4px
            
    .dark
        background $nav-bg - 10%
        color #fff !important
        .block
            &__title
                color $light-color
            &__description
                color #fff - 20%
                
    .darker
        background $nav-bg - 25%
        color #fff !important
        .block
            &__title
                color $light-color
            &__description
                color #fff - 20%
                