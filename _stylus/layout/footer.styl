//
footer
  background-color $nav-bg
  span(1/1)

  .wrap
    display flex
    justify-content space-between
    flex-wrap wrap
    padding 50px 30px 25px
    font-family $font-regular
    font-size 14px

    ul li
      a
        font-size 14px
        color #8487b2
        font-weight 600
        &:hover
          color $color-a-hover

      &:not(:last-child)
        margin-right 20px

    .logo
      display block
    //   width 97px
    //   height 28px
    //   background-image url(/landingPage/img/vibby-logo-white.png)

    .company ul, .connect ul, .legal ul
      display flex

    .company ul, .connect ul
      margin-top 20px

    .company
      width 60%
      // margin-bottom 20px

    .connect
      width 40%
      display flex
      justify-content flex-end
      flex-direction column
      text-align right
      ul
        justify-content flex-end
      h5
        color #fff
        font-family $font-bold

    .legal
      margin-top 30px
      @media(max-width 520px)
        width 100%
        ul
          margin 0 auto
          flex-direction column
          // justify-content center
          li
            text-align center
            margin-right 0
            margin-bottom 10px
