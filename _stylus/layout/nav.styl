//Nav

.logo
    width 84px
    height 29px
    display inline-block
    padding-top 10px
    float left
    margin-right 30px
    img
        width 100%

nav.main-nav
    // background-color #ccc
    position fixed
    top 0
    left 0
    right 0
    height 52px
    z-index 9999
    align-items center
    padding-top 10px
    transition all 0.2s ease

    >*
        flex-shrink 0
    ul,li,a
        display inline-block
        line-height 52px
    ul
        margin-left 0px
        margin-bottom 0px
    li a
        color #fff - 15%
        &:hover
            color #fff
    li
        float left

    .left-nav
        float left
        li
            margin-right 30px
    .right-nav
        float right

    &.scroll
        background-color $nav-bg
        padding-top 0
    
    .menu-icon
        display none
        right 100px
        cursor pointer
        z-index: 10000
        user-select none
        margin-top 17px
    .sh
        content ""
        width 30px
        height 3px
        background-color #fff
        position relative
        margin-bottom 5px
        transition all 0.2s ease
        border-radius 2px
    &--active .sh2
        background-color rgba(0, 0, 0, 0)
        transform translateX(-5px)
    &--active .sh1
        transform rotate(45deg) translateX(4px) translateY(7px)
    &--active .sh3
        transform rotate(-45deg) translateX(4px) translateY(-8px)
    &--active .text
        display none
    .sh3
        margin 0px    