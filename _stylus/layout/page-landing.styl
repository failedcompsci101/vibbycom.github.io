//
.landing
    //
    .hero
        background-color $nav-bg
        background-size cover
        background-repeat no-repeat
        padding 165px 0 240px
        margin 0
        .block__title
            color #fff
            margin-bottom 10px
        .block__description
            color $light-color
        .wrap
            w($xl)
            text-align center
            wrap()
    .landing-page
        background-image url(../../assets/img/landing-bg.jpg)

    .giveaway
        background-color $nav-bg
        background-image url(../../assets/img/lol-giveaway.jpg)
        background-size cover
        background-repeat no-repeat
        padding 200px 0 200px
        margin 0
        .block__title
            color #fff
        .block__description
            color #7D8BB5
        .wrap
            w($xl)
            text-align center
            wrap()


    .benefits
        .benefit
            column(1/3, cycle: 3)
            text-align center
            &__icon
                height 140px
                width 140px
                border-radius 50%
                border 1px solid #BBE1FF
                margin 0 auto
                display flex
                align-items center
                justify-content center
                margin-bottom 30px
                .fa
                    font-size 4.236rem
                    color #2CA3FF

    .use-cases
        cf()
        w(100%)
        margin-bottom 0
        padding-top 40px

    .demo-video
        position relative
        text-align center
        top -100px

    .features
        // background-color #aaa
        cf()

    .user-quotes
        background-color #E1E5F1
        padding 50px 30px
        span(1/1)
        .quote
            text-align left
            background-color #fff
            padding 30px
            col(1/3, cycle: 3)
            +below($md)
                span(1/1)
                uncycle();
                margin-bottom 30px
                &:last-child
                    margin-bottom 0px
            .user
                display flex
                align-items center
                &__img
                    height 44px
                    width 44px
                    background-color #aff
                    border-radius 50%
                &__wrap
                    margin-left 10px
                &__name
                    font-size 1.618rem
                &__role
                    color #808996
            &__text
                color #808996
                margin-top 25px























