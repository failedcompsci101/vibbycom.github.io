//
.landing
    //
    .hero
        background-color $nav-bg
        background-size cover
        background-position center center
        background-repeat no-repeat
        padding 185px 0 0px
        height 640px
        margin 0
        +below($sm)
            padding 130px 0px 110px
            height 460px
        .block__title
            color #fff
            position relative
        .block__description
            color $light-color
            position relative
            center($sm)
        .container
            w($xl)
            text-align center
    .landing-page
        background-image url(https://s3-eu-west-1.amazonaws.com/vibby-static/LandingPage/landing/landing-bg.jpg)

    .use-cases
        cf()
        w(100%)
        margin-bottom 0
        padding-top 40px

    .demo-video
        position relative
        text-align center
        top -130px
        +below($sm)
            display none
        .browser-top
            height 33px
        .video-player
            border-radius 0px 0px 5px 5px
            cursor pointer

    .features
        // background-color #aaa
        cf()
        padding-top 40px
        padding-bottom 7px
            
    .how_it_works
        margin-top 6px
        padding-top 40px
        padding-bottom 50px
        .benefit
            text-align center
            center(max-width = $xs)
            +below($md)
                margin-bottom emRhythm(3, $base-em-font-size)
            +above($md)
                col(1/3, cycle: 3)
                text-align center
            &__icon
                height 140px
                width 140px
                border-radius 50%
                border 3px solid #BBE1FF
                margin 0 auto
                display flex
                align-items center
                justify-content center
                margin-bottom 30px
                setType(7, $ms-up3)
                color $link-color
            p
                margin-bottom 5px

    .user-quotes
        background-color #E1E5F1
        padding 50px 0px
        span(1/1)
        .quote
            text-align left
            background-color #fff
            padding 30px
            col(1/3, cycle: 3)
            +below($md)
                span(1/1)
                uncycle();
                margin-bottom 30px
                &:last-child
                    margin-bottom 0px
            .user
                &__image
                    width 60px
                    height 60px
                    background lighten($link-color, 50%)
                    border-radius 30px
                    float left
                    margin-right 10px
                    overflow hidden
                    img
                        width 60px
                        height 60px
                &__name
                    font-size $ms-up
                &__role
                    color $dark-color + 20%
            &__text
                color $dark-color + 20%
                margin-top 25px























