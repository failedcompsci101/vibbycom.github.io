.landing
    //
    .hero
        background-color $nav-bg
        background-size cover
        background-position center center
        background-repeat no-repeat
        padding 165px 0 240px
        margin 0
        +below($sm)
            padding 130px 0px 110px
        .block__title
            color #fff
            position relative
        .block__description
            color $light-color
            position relative
        .container
            w($xl)
            text-align center
    .landing-page
        background-image url(../../assets/img/landing-bg.jpg)

    .use-cases
        cf()
        w(100%)
        margin-bottom 0
        padding-top 40px

    .demo-video
        position relative
        text-align center
        top -100px
        +below($sm)
            display none

    .features
        // background-color #aaa
        cf()
        +below($sm)
            padding-top 40px

    .user-quotes
        background-color #E1E5F1
        padding 50px 30px
        span(1/1)
        .quote
            text-align left
            background-color #fff
            padding 30px
            col(1/3, cycle: 3)
            +below($md)
                span(1/1)
                uncycle();
                margin-bottom 30px
                &:last-child
                    margin-bottom 0px
            .user
                &__name
                    font-size $ms-up
                &__role
                    color #808996
            &__text
                color #808996
                margin-top 25px























